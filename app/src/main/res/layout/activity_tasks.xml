<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Tasks"
    android:id="@+id/relativelayout"
    android:background="#101010">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="580dp"
        android:src="@drawable/plussingn"
        android:background="@drawable/plussingn"
        android:id="@+id/fb"/>
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="	#FFB6C1"
        android:id="@+id/cv"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="Title"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:hint="  Enter a short and crisp title"
                android:id="@+id/title"/>
            <TextView
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:text="Deadline"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:hint="  Set a reasonable deadline"
                android:id="@+id/deadline"/>

            <TextView
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:text="Description"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:id="@+id/description"
              />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="30dp"
               android:layout_marginLeft="120dp"
               android:text="   Maximum 3 lines description"
               android:textSize="15dp"
               android:textColor="#000000"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="10dp"
                android:background="	#ADD8E6"
                android:text="DONE"
                android:textSize="20dp"
                android:textColor="#500000 "
                android:id="@+id/taskbutton"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="365dp"
        android:layout_height="190dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        app:cardBackgroundColor="	#383838 ">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="158dp"
                android:text="View pending tasks"
                android:textColor="	#FFFFFF"
                android:textSize="21dp"
                android:layout_marginTop="8dp"
                android:id="@+id/pending"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="-6dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginLeft="158dp"
                android:text="View completed tasks"
                android:textColor="	#FFFFFF"
                android:textSize="21dp"
                android:layout_marginTop="20dp"
                android:id="@+id/completed"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#FFFFFF"
                android:layout_marginLeft="158dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>
        
    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="658dp"
        android:background="#101010"
        android:layout_marginLeft="-4dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="20dp"
            android:text="Diary"
            android:id="@+id/tododiary4"
            android:textColor="#F4B10C"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-72dp"
            android:id="@+id/tododirayimage4"
            android:src="@drawable/tabbeddiary"/>
        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="56dp"
            android:text="News"
            android:id="@+id/todonews4"
            android:textColor="#F4B10C"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="-72dp"
            android:id="@+id/todonewsimage4"
            android:src="@drawable/tabbednews"/>

        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="55dp"
            android:text="Quotes"
            android:id="@+id/todoquote4"
            android:textColor="#F4B10C"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="-65dp"
            android:id="@+id/todoquoteimage4"
            android:src="@drawable/tabbedquote"/>
        <TextView
            android:layout_width="68dp"
            android:layout_height="40dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="41dp"
            android:text="Tasks"
            android:id="@+id/todotasks4"
            android:textColor="#F4B10C"
            android:textSize="25dp"/>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="32dp"
            android:layout_marginTop="9dp"
            android:layout_marginLeft="-65dp"
            android:id="@+id/todotodoimage4"
            android:src="@drawable/tabbedtodo"/>



    </LinearLayout>




</RelativeLayout>