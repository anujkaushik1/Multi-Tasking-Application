<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiaryFront"
    android:orientation="vertical"
    android:background="#282828">

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/diaryfrontrecycler"
        android:layout_marginTop="60dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginLeft="320dp"
        android:src="@drawable/floating"

        android:background="@drawable/floating"
        android:id="@+id/floatingdiary"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="44dp"
        android:background="#282828"
        android:orientation="horizontal">

       <TextView
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:text="Diary"
           android:id="@+id/tododiary1"
        android:textColor="#F4B10C"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-72dp"
        android:id="@+id/tododirayimage1"
        android:src="@drawable/tabbeddiary"/>
    <TextView
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="56dp"
        android:text="News"
        android:id="@+id/todonews1"
        android:textColor="#F4B10C"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="-72dp"
        android:id="@+id/todonewsimage1"
        android:src="@drawable/tabbednews"/>

    <TextView
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="55dp"
        android:text="Quotes"
        android:id="@+id/todoquote1"
        android:textColor="#F4B10C"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="-65dp"
        android:id="@+id/todoquoteimage1"
        android:src="@drawable/tabbedquote"/>
    <TextView
        android:layout_width="68dp"
        android:layout_height="40dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="41dp"
        android:text="Tasks"
        android:id="@+id/todotasks1"
        android:textColor="#F4B10C"
        android:textSize="25dp"/>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="32dp"
        android:layout_marginTop="9dp"
        android:layout_marginLeft="-65dp"
        android:id="@+id/todotodoimage1"
        android:src="@drawable/tabbedtodo"/>



</LinearLayout>



</LinearLayout>