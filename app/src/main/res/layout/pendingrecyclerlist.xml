<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/linearlayouto"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:text="hejjwjej"
        android:layout_marginLeft="20dp"
        android:textColor="#FFCC00"
        android:background="#383838"
        android:id="@+id/pendingtextview2"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="3dp"
        android:background="#FFCC00"
        android:text="hejjwjej"
        android:textColor="#FFCC00"
        android:textSize="22dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginTop="50dp"
        android:textSize="22dp"
        android:text="   janjnjsmkk"
        android:layout_marginLeft="20dp"
        android:textColor="#FFFF"
        android:background="#383838"
        android:id="@+id/pendingtextview"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginLeft="105dp"
        android:layout_marginTop="11dp"
        android:background="#383838"
        android:text="jkjk"
        android:textColor="#FFFF"
        android:textSize="17dp"
        android:id="@+id/pendingtextview1"/>

    <TextView
        android:layout_width="80dp"
        android:layout_height="43dp"
        android:layout_marginTop="-40dp"
        android:background="#383838"
        android:id="@+id/pendingtextview3"
        android:text="Deadline :"
        android:textSize="17dp"
        android:textColor="#FFFF"
        android:layout_marginLeft="22dp"/>

    <ImageView
        android:id="@+id/imageviewo"
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginLeft="360dp"
        android:layout_marginTop="-40dp"
        android:src="@drawable/anuj" />
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_height="370dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="20dp"
        app:cardBackgroundColor="	#FFB6C1"
        android:id="@+id/cvo"
        app:cardCornerRadius="10dp"
        app:cardElevation="5dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearlayout">

            <TextView
                android:layout_width="70dp"
                android:layout_height="33dp"
                android:text="Title"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:hint="  Enter a short and crisp title"
                android:id="@+id/titleo"/>
            <TextView
                android:layout_width="95dp"
                android:layout_height="33dp"
                android:text="Deadline"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:hint="  Set a reasonable deadline"
                android:id="@+id/deadlineo"/>

            <TextView
                android:layout_width="125dp"
                android:layout_height="33dp"
                android:text="Description"
                android:textSize="22dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="15dp"
                android:textColor="#000000"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="0dp"
                android:background="#FFFFFF"
                android:id="@+id/descriptiono"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="120dp"
                android:text="   Maximum 3 lines description"
                android:textSize="15dp"
                android:textColor="#000000"/>

            <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="10dp"
                android:background="	#ADD8E6"
                android:text="DONE"
                android:textSize="20dp"
                android:textColor="#500000 "
                android:id="@+id/buttono"
                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>